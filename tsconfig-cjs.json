{
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules/*",
    "./build/*",
    "./dist/*",
    "./lib/**/*",
    "./lib/*",
    "./types/**",
    "./specs/**"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "CommonJs",
    "outDir": "./build",
    // "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    // "strict": true,
    "esModuleInterop": true
  }
}
